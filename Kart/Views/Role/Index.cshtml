@model IEnumerable<Role>
<h1>Roles</h1>
@using (Html.BeginForm("Index", "Role", FormMethod.Get))
{
    <table class="table table-bordered table-striped table-hover ">
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>

                <td>@i.Name</td>
                <td>
                    @Html.ActionLink("Add Role", "Create")
                </td>

                <td> @Html.ActionLink("Edit Role", "Edit", new { id = i.Id })</td>
                <td>  @Html.ActionLink("Delete Role", "Delete", new { id = i.Id })</td>


            </tr>

        }

    </table>
}

