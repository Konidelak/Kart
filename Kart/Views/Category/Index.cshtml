@using Kart.Models.VM
@model IEnumerable<CategoryVm>
<h1>Roles</h1>
@using (Html.BeginForm("Index", "Category", FormMethod.Get))
{
    <table class="table table-bordered table-striped table-hover ">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>

        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>

                <td>@i.Name</td>
                <td>@i.Description</td>

                <td>
                    @Html.ActionLink("Add Category", "Create")
                </td>
                <td> @Html.ActionLink("Edit Category", "Edit", new { id = i.Id })</td>
                <td>  @Html.ActionLink("Delete Category", "Delete", new { id = i.Id })</td>



            </tr>

        }

    </table>
}
